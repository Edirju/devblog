---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/Section.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

import Spreadsheet from "../../icons/Spreadsheet.astro";
import Rss from "../../icons/Rss.astro";

import { basics } from "../../consts/landing.json";
const { name, label } = basics;
import { posteos } from "../../consts/social-rss.json";

import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title={`Blog de ${name} • ${label}`}>
  <Header />
  <Section>
    <article>
      <header>
        <h2>
          <Spreadsheet />
          Blog <span>|</span> Posts publicados.
        </h2>
      </header>
      <footer>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  <h3>{post.data.title}</h3>
                  <p class="summary">{post.data.description}</p>
                  <p>
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                  <div />
                </a>
              </li>
            ))
          }
        </ul>
      </footer>
    </article>
  </Section>
  <Section>
    <article>
      <header>
        <h2>
          <Rss />
          Blog <span>|</span> Social Media posts:
        </h2>
      </header>
      <footer>
        <ul>
          {
            posteos.map(({ network, title, description, url, date }) => {
              return (
                <li>
                  <a href={url}>
                    <h3>{title}</h3>
                    <p>
                      {date} <span>•</span> {network}
                    </p>
                  </a>
                </li>
              );
            })
          }
        </ul>
      </footer>
    </article>
  </Section>
  <Footer />
</Layout>

<style>
  article {
    font-family: var(--Inter);
    color: rgb(var(--light), 0.85);
    display: flex;
    flex-direction: column;
    gap: 2rem;
    header {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      h2 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 700;
        text-wrap: pretty;
        letter-spacing: -0.05em;
        font-size: clamp(1.125rem, 1.0909rem + 0.1818vw, 1.25rem);
        span {
          font-weight: 200;
          color: rgb(var(--blue-light), 0.35);
        }
      }
    }
    footer {
      ul {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        color: rgb(var(--light), 0.65);
        li a {
          display: flex;
          flex-direction: column;
          align-items: flex-start;
          gap: 0.5rem;
          border-left-width: 1px;
          border-left-style: solid;
          border-image: linear-gradient(180deg, rgb(var(--blue-light),0.65),rgb(var(--pink),0.65)) 1;
          /* border-left: 2px solid rgb(var(--pink), 0.35); */
          padding-left: 0.5rem;
          h3 {
            font-size: clamp(1rem, 0.9259rem + 0.3704vw, 1.25rem);
            font-weight: 300;
            text-transform: capitalize;
            padding: 0;
            margin: 0;
            position: relative;
            transition: all 0.2s ease;
            &::after {
              content: "";
              position: absolute;
              bottom: 0;
              left: -2px;
              right: -2px;
              height: 2px;
              background-color: rgb(var(--blue-light), 0.65);
              transition: 0.3s;
              transition-timing-function: cubic-bezier(
                0.175,
                0.885,
                0.32,
                1.275
              );
              z-index: -1;
            }
            &:hover {
              color: rgb(var(--dark), 0.85);
              text-shadow: 0 0 0.5rem rgb(var(--dark), 0.45);
            }
            &:hover::after {
              height: 107%;
            }
          }
          p {
            font-size: clamp(0.6875rem, 0.6505rem + 0.1852vw, 0.8125rem);
            font-weight: 200;
            font-family: var(--Inconsolata);
            letter-spacing: -0.025em;
            color: rgb(var(--blue-light), 0.45);
            padding: 0;
            margin: 0;
            span {
              font-size: 16px;
              font-weight: 700;
              vertical-align: middle;
              padding: 0;
              margin: 0;
            }
          }
          .summary {
            font-size: clamp(0.875rem, 0.838rem + 0.1852vw, 1rem);
            font-family: var(--Inter);
            font-weight: 200;
            text-wrap: pretty;
            line-height: 1.25;
            letter-spacing: -0.05em;
            color: rgb(var(--light), 0.45);
          }
        }
      }
    }
  }
</style>

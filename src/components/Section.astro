---
const { title } = Astro.props;
---
<section>
  {
    title && <h2>{title}</h2>
  }
  <slot />
</section>

<style>
  section {
    margin: 0 auto 72px;
    max-width: 700px;
    font-family: var(--Inter);
    @media (width <= 43.75rem) {
      padding: 0 16px;
      margin-bottom: 38px;
    }
    h2 {
      font-size: 20px;
      font-weight: 700;
      font-style: normal;
      line-height: 1.5;
      letter-spacing: -0.025em;
    }
  }
</style>
---
import Section from "../Section.astro";
import Spreadsheet from "../../icons/Spreadsheet.astro";
import Detail from "../../icons/Detail.astro";
import FormattedDate from "../FormattedDate.astro";
import { getCollection } from "astro:content";
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<Section>
  <article>
    <header>
      <h2>
        <Spreadsheet />
        Blog <span>|</span> Posts Recientes:
      </h2>
    </header>
    <footer>
      <ul>
        {
          posts.map((post) => (
            <li>
              <a href={`/blog/${post.id}/`}>
                <Detail />
                <div>
                  <h3>{post.data.title}</h3>
                  <p>
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </footer>
  </article>
</Section>

<style>
  article {
    font-family: var(--Inter);
    color: rgb(var(--light), 0.85);
    display: flex;
    flex-direction: column;
    gap: 2rem;
    header {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      h2 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 700;
        text-wrap: pretty;
        letter-spacing: -0.05em;
        font-size: clamp(18px, 1.0909rem + 0.1818vw, 1.25rem);
        span {
          font-weight: 200;
          color: rgb(var(--blue-light), 0.25);
        }
      }
    }
    footer {
      ul {
        display: flex;
        flex-direction: column;
        /* flex-wrap: wrap; */
        gap: 0.5rem /* 4px */;
        color: rgb(var(--light), 0.65);
        li a {
          display: flex;          
          align-items: flex-start;
          gap: 0.5rem;
          div {
            border-left: 1px solid rgb(var(--pink), 0.35);
            padding-left: 0.5rem;
            h3 {
              position: relative;
              font-size: clamp(0.875rem, 0.838rem + 0.1852vw, 1rem);
              font-weight: 300;
              text-transform: capitalize;
              padding: 0;
              margin: 0;
              transition: all 0.2s ease;
              &::after {
                position: absolute;
                content: "";
                left: 0;
                right: 0;
                top: 100%;
                height: 2px;
                background-color: rgb(var(--blue-light), 0.65);
                transform: scaleX(0);
                transition: 0.2s;
                transform-origin: left;
              }
              &:hover {
                color: rgb(var(--blue-light), 0.65);
              }
              &:hover::after {
                transform: scaleX(1);
              }
            }
            p {
              font-size: clamp(0.6875rem, 0.6505rem + 0.1852vw, 0.8125rem);
              font-weight: 200;
              font-family: var(--Inconsolata);
              color: rgb(var(--light), 0.35);
              padding: 0;
              margin: 0;
            }
          }
        }
      }
    }
  }
</style>

---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
interface Props {
  title: string;
}
const { title } = Astro.props;
const description = SITE_DESCRIPTION;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <main>
      <div
        class="absolute inset-0 -z-10 h-full w-full bg-transparent bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:16px_16px]"
      >
        <div
          class="absolute left-0 right-0 top-0 -z-10 m-auto h-[300px] w-[300px] rounded-full bg-[rgb(var(--blue-light),0.45)] opacity-20 blur-[100px]"
        >
        </div>
      </div>
      <slot />
    </main>
  </body>
</html>

<style>
  :root {
    --hdr-gradient: linear-gradient(
      to top left in oklab,
      oklch(0.19 0 0) 2% 2%,
      oklch(0.26 0.0166 248.46) 93% 93%
    );
    --sdr-gradient: linear-gradient(
      to top left,
      #141414 2% 2%,
      #1e252c 93% 93%
    );
    background: var(--hdr-gradient);
  }
  main {
    position: relative;
    min-height: 100dvh;
  }
</style>
